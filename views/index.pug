extends layout

block content
  h1= title
  p Welcome to #{title}

  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Send an email

        // email form
        form(method='POST' action='/api/email')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='subject') Subject:
            input#subject.form-control(type='text', placeholder='subject' name='subject')
          div.form-group
            label(for='message') Message:
            input#message.form-control(type='text', placeholder='message' name='message')
          button.btn.btn-primary(type='submit') Send email!
